<%= form_with(model: department, local: true) do |form| %>
<div class="module-header">
  <div class="module-title">
    <%= link_to 'Departamentos', departments_path %> <span class="grey-text">></span> 
    <% if title == 'Editar' %>
      <%= link_to department.name, department_path(department) %>
    <% else %>
      <%= title %>
    <% end %>
  </div>
  <div class="module-actions">
    <%= form.submit 'Guardar', class: 'waves-effect waves-light btn-small blue-grey' %>
  </div>
</div>
<div class="module-workarea">

    <div class="item-workarea">
      <div class="item-section">
        <div class="item-section-workarea">

  <% if department.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:</h2>

      <ul>
      <% department.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s12">
      <%= form.text_field :name, id: :contract_name %>
      <%= form.label :name, 'Nombre' %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= form.collection_select :person_id, Person.all, :id, :full_name  %>
      <%= form.label :person_id, "Responsable" %>
    </div>
  </div>
<% end %>
<script>
  M.updateTextFields()
</script>

