<%
detalle_class = active == 'detalle'? 'active' : ''
elementos_class = active == 'elementos'? 'active' : ''
archivos_class = active == 'archivos'? 'active' : ''
%>
<ul class="tabs">
  <li class="tab col s2"><%= link_to 'Detalles', ticket_path(@ticket), target: "_self", class: detalle_class  %></li>
  <li class="tab col s2"><%= link_to 'Elementos', ticket_ticket_items_path(@ticket), target: "_self", class: elementos_class%></li>
  <li class="tab col s2"><%= link_to 'Archivos', ticket_attachments_path(@ticket), target: "_self", class: archivos_class%></li>
</ul>