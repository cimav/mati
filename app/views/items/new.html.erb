<%= form_with(model: @item, local: true) do |form| %>
<div class="module-header">
  <div class="module-title">
  	<a href="/cmdb">Inventario</a> <span class="grey-text">></span> Nuevo</a>
  </div>
  <div class="module-actions">
  	<%= form.submit 'Guardar', class: 'waves-effect waves-light btn-small blue-grey' %>
  </div>
</div>
<div class="module-workarea">

  	<div class="item-workarea">
  	  <div class="item-section">
  	    <div class="item-section-title">General</div>
        <div class="item-section-workarea">
          <% if @item.errors.any? %>
