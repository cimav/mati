<div class="module-header">
  <div class="module-title">
  	<a href="/projects">Proyectos</a> <span class="grey-text">></span> <%= @project.identificator %> </a>
  </div>
  <div class="module-actions">
    <span class="badge-status <%= @project.status_color %>"><%= @project.status_text %></span>
    <span class="badge-status <%= @project.priority_color %>"><%= @project.priority_text %></span>
  </div>
</div>

<div class="module-workarea">
  <div class="module-menu">
    <%= render partial:"menu", locals: {active: 'detalles'} %>
  </div>
  <div class="item-area">
  	<div class="item-workarea">
  	  <div class="row">
  	  	<div class="col s8">
  	  	  
          <div class="project-desc"><%= @project.description %></div>

          <div class="project-extra">
            <table>
              <tr>
                <td class="avatar"><img src="<%= @project.person.picture_url %>" alt="" class="circle responsive-img"></td>
                <td>Creado por <a href="<%= person_path(@project.person) %>"><%= @project.person.full_name %></a> <%= @project.created_at.strftime('%Y-%m-%d %H:%M') %></td>
              </tr>
            </table>
          </div>
        </div>
        <div class="col s4 project-extra">
          Fecha de inicio planeada: <%= @project.start_date_planned.strftime('%Y-%m-%d %H:%M') rescue '--'%>.<br>
          Fecha de termino planeada: <%= @project.end_date_planned.strftime('%Y-%m-%d %H:%M') rescue '--' %><br>
          Fecha de inicio real: <%= @project.start_date_real.strftime('%Y-%m-%d %H:%M') rescue '--' %><br>
          Fecha de termino real: <%= @project.end_date_real.strftime('%Y-%m-%d %H:%M') rescue '--' %><br>
        </div>
      </div>
      <div class="row">
        <div class="col s12" id="kanban-area">      
          <%= render partial:"project_tasks/kanban", locals: {project: @project} %>
  	  	</div>	
  	  </div>
      
  	</div>
  </div>
</div>


  
