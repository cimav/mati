  <li class="tab col s2"><%= link_to 'Inventario', person_items_path(@person), target: "_self", class: inventario_class %></li>
  <li class="tab col s2"><%= link_to 'Archivos', person_attachments_path(@person), target: "_self", class: archivos_class %></li>
  <li class="tab col s2"><%= link_to 'Actividad', person_activity_logs_path(@person), target: "_self", class: actividad_class %></li>
</ul>