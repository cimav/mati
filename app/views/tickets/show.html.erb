<%= form_with(model: @ticket, local: true) do |form| %>
<div class="module-header">
  <div class="module-title">
  	<a href="/tickets">Tickets</a> <span class="grey-text">></span> <%= @ticket.identificator %> </a>
  </div>
  <div class="module-actions">
  </div>
</div>

<div class="module-workarea">
  <div class="module-menu">
    <%= render partial:"menu", locals: {active: 'detalles'} %>
  </div>
  <div class="item-area">
  	<div class="item-workarea">
  	  <div class="row">
  	  	<div class="col s8">
  	  	  <div class="ticket-header">
  	  	  	<div class="ticket-picture"><img src="<%= @ticket.person.picture_url %>" alt="" class="circle responsive-img"></div>
  	  	  	<div class="ticket-person"><a href="<%= person_path(@ticket.person) %>"><%= @ticket.person.full_name %></a></div>
  	  	  	<div class="ticket-contact"><%= @ticket.person.email %> â€“ <%= @ticket.person.phone %></div>
  	  	  	<div class="ticket-extra">Creado el <%= @ticket.created_at %></div>
  	  	  	<div class="clearfix"></div>
  	  	  </div>
          <div class="ticket-desc"><%= @ticket.description %></div>
          

  	  	</div>
  	  	<div class="col s4">
  	  		<div class="input-field">
		      <%= form.collection_select :agent_id, Agent.joins(:person).order('people.first_name', 'people.last_name'), :id, :full_name, {:selected => current_user.id}  %>
	          <%= form.label :agent_id, "Agente" %>
		    </div>
          	<div class="input-field">
              <% priority_array = Ticket::PRIORITIES.invert %>
              <%= form.select :priority, options_for_select(priority_array) %>
	          <%= form.label :priority, 'Prioridad' %>
            </div>
  	  	</div>
  	  </div>
  	</div>
  </div>
</div>
<% end %>