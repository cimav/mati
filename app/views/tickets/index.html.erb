<div class="module-header">
  <div class="module-title">
    Tickets
  </div>
  <div class="module-actions">
  	<a class="waves-effect waves-light btn-small blue-grey" href="/tickets/new">Agregar nuevo</a>
  </div>
</div>
<div class="module-workarea">
  <div class="item-area">
  	<div class="item-workarea">
  	  <div class="row">
        <div class="col s12 item-main">
          <div class="log-items">
          <% @tickets.each do |ticket| %>
            <div class="log-item ticket-item">
              <div class="log-picture">
                <img src="<%= ticket.person.picture_url %>" alt="" class="circle responsive-img">
              </div>
              <div class="log-content">
                <strong><%= ticket.person.full_name %></strong> <span class="log-date"> <%= ticket.created_at %></span><br>
                  <a href="<%= ticket_path(ticket) %>"><%= ticket.description %></a> 
              </div>
              <div class="clearfix"></div>
            </div>
          <% end %>
          </div>
            
        </div>
      </div>
  	</div>
  </div>
</div>