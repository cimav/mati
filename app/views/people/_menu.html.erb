<%
detalle_class = active == 'detalle'? 'active' : ''
tickets_class = active == 'tickets'? 'active' : ''
inventario_class = active == 'inventario'? 'active' : ''
archivos_class = active == 'archivos'? 'active' : ''
actividad_class = active == 'actividad'? 'active' : ''
%>
<ul class="tabs">
  <li class="tab col s2"><%= link_to 'Detalles', person_path(@person), target: "_self", class: detalle_class  %></li>
