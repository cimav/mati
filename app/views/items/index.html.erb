<div class="module-header">
  <div class="module-title"><strong>Inventario</strong></div>
  <div class="module-actions">
  	<a class="waves-effect waves-light btn-small blue-grey darken-4" href="/cmdb/items/new">Agregar nuevo</a>
  </div>
</div>
<div class="module-workarea">
  <table class="highlight">
  	<thead>
  	  <tr>
  	    <th>Nombre</th>
  	    <th>Tipo</th>
  	    <th>Ubicaci√≥n</th>
  	    <th>Usado por</th>
